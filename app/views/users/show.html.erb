<%= provide :title, @user.name %>
<%= @user.name %>
<%= @user.email %>

<% if signed_in? %>
  <%= render 'follow_form' %>
<% end %>

<%= form_for(@micropost) do |f| %>
	<%= f.text_area :content, placeholder: "post here..." %>
	<%= f.submit "submit!!!", class: "btn btn-large btn-primary" %>
<% end %>

<% if @user.microposts.any? %>
  <ol>
    <%= render @microposts %>
  </ol>
<% end %>