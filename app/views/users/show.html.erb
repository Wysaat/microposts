<%= provide :title, @user.name %>
<%= @user.name %>
<%= @user.email %>
<% if signed_in? %>
  <%= form_for(current_user.relations.build(followee: @user.name),
   remote: true) do |f| %>
  <%= f.hidden_field :followee %>
  <%= f.submit "follow me!", class: "btn btn-large btn-primary" %>
  <% end %>
<% end %>
<%= form_for(@micropost) do |f| %>
	<%= f.text_area :content, placeholder: "post here..." %>
	<%= f.submit "submit!!!", class: "btn btn-large btn-primary" %>
<% end %>

<% if @user.microposts.any? %>
  <ol>
    <%= render @microposts %>
  </ol>
<% end %>