  <%= csrf_meta_tags %>
</head>
<body>
	<header class='navbar navbar-fixed-top'>
		<div class='navbar-inner'>
			<div class='container'>
		    <nav>
			    <%= link_to 'MicroPosts.com', root_path, id: 'logo' %>
			    <ul class='nav pull-right'>
				    <li><%= link_to 'home', root_path %></li>
				    <li><%= link_to 'help', help_path %></li>
			    </ul>
		    </nav>
	    </div>
	  </div>
	</header>
  
  <div class='container'>
    <%= yield %>
  </div>

</body>
</html>
